{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "jsx": "react",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["server.ts", "lib/db/schema.ts", "lib/db/index.ts", "env.d.ts"],
  "exclude": ["node_modules", ".next", "out", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
